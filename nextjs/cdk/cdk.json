{
  "app": "pnpm lint && pnpm dlx node --loader ts-node/esm bin/cloudfront-cdn-template.ts",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "**/*.d.ts",
      "**/*.js",
      "tsconfig.json",
      "package*.json",
      "yarn.lock",
      "node_modules",
      "test"
    ]
  },
  "requireApproval": "never",
  "versionReporting": false,
  "pathMetadata": false,
  "context": {
    "default": {
      "stackName": "todo-list-examples-nextjs",
      "bucketName": "todo-list-examples-nextjs",
      "cloudfront": {
        "comment": "for ToDo List example by Next.js"
      }
    }
  }
}
